{
	"manifest_version":2,
	"name":"Auto Logout",
	"description":"Automagically logout from a site after certain time.",
	"version":"1.0",
	"icons":{
			"16":"icons/icon16.png",
			"48":"icons/icon48.png",
			"128":"icons/icon128.png"
		},
	
	"content_scripts":[
		{
			"matches": ["http://www.facebook.com/*", "https://www.facebook.com/*", "https://www.quora.com/*", "https://twitter.com/*"],
			"js" :["scripts/logout.js", "scripts/jquery-1.12.1.min.js"]
		}
	],

	"browser_action":{
		"default_title":"You will be logged out in 10 minutes.",
		"default_icon":"icons/icon128.png",
		"default_popup":"popup.html"
		},

	"permissions":[
			"activeTab",
			"alarms",
			"declarativeContent",	
			"idle",
			"notifications",
			"storage",
			"tabCapture",
			"tabs",
			"topSites",
			"https://www.facebook.com/*",
			"https://twitter.com/*",
			"https://www.quora.com/*"	
		      ]
}
